<div>
  <h2>Create Profile</h2>
</div>
<div class="container">
  <div class="form-group">
    <form action="/create_profile_ii" method="get">
      <label class="input_label" for="name">Name*</label>
      <input class="form-control" required="required" type="text" placeholder="Enter your name" name="name" data-name="Name"></input>
      <label class="input_label" for="email">Email Address*</label>
      <input class="form-control" required="required" type="email" placeholder="Enter your email address" name="email" data-name="Email" ></input>
      <label class="input_label" >Password*</label>
      <input class="form-control" required="required" type="password" name="password"></input>
      <label class="input_label">Confirm Password*</label>
      <input class="form-control" required="required" type="password" name="password2" required="required"></input>
      <label class="input_label">Phone Number</label>
      <input class="form-control" type="text" placeholder="(555) 555 - 5555" name="phone" required="required"></input>
      <label class="input_label">Current Location</label>
      <input class="form-control" type="text" placeholder="City" name="city" ></input>
      <input class="form-control" style="margin-top: 20px;" type="text" placeholder="Zip Code" name="zip" required="required"></input>
      <select style="margin-top: 20px;" class="form-control" name="state" data-name="California">
      {{#each states}}
        <option value="{{name}}">{{name}}</option>
        {{/each}}
      </select>
      <label class="input_label">Max Distance Willing to Commute</label>
      <select class="form-control" name="commute_dist" required="required">
        <option value="1-10">1-10 miles</option>
        <option value="11-20">11-20 miles</option>
        <option value="21-30">21-30 miles</option>
      </select>
      <label class="input_label">Max Distance Willing to Relocate</label>
      <select class="form-control" name="relocate_dist">
        <option value="0">Not at all</option>
        <option value="50">50 miles</option>
        <option value="100+">Another city</option>
        <option value="500+">Another state</option>
      </select>
      <label class="create_aster"><strong>* indicates required field</strong></label>
      <input class="w-button create_submit" type="submit" value="NEXT" data-wait="Please wait..."></input>
    </form>
  </div>
</div>